@model ShopCartViewModel
<head>
	<link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
	<div class="container cart-container">
		@foreach (var item in Model.UserShopCart.ListShopItems)
		{
			<div class="alert alert-warning mt-2">
				<b>Реактив:</b>@item.ReagentItem.Name<br />
				<b>Цена:</b>@item.ReagentItem.Price.ToString("c")
			</div>
		}
		<hr />
		<div class="btn btn-danger" asp-controller="Order">Оплатить</div>
	</div>
</body>
