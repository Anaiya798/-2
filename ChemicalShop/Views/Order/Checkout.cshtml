@model Order
<head>
	<link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
	<div class="row checkout-form-container" >
		<h3>Оформление заказа</h3>
		<form asp-action="Checkout" method="post" class="form-horizontal">
			<div class="form-group">
				<label asp-for="CustomerName"></label>
				<div class="col-md-5">
					<input asp-for="CustomerName" class="form-control" />
					<span asp-validation-for="CustomerName" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="CustomerSurname"></label>
				<div class="col-md-5">
					<input asp-for="CustomerSurname" class="form-control" />
					<span asp-validation-for="CustomerSurname" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="CustomerAddress"></label>
				<div class="col-md-5">
					<input asp-for="CustomerAddress" class="form-control" />
					<span asp-validation-for="CustomerAddress" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="CustomerPhone"></label>
				<div class="col-md-5">
					<input asp-for="CustomerPhone" class="form-control" />
					<span asp-validation-for="CustomerPhone" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="CustomerEmail"></label>
				<div class="col-md-5">
					<input asp-for="CustomerEmail" class="form-control" />
					<span asp-validation-for="CustomerEmail" class="text-danger"></span>
				</div>
			</div>
			<input class="btn btn-success" type="submit"  value="Завершить заказ" />
		</form>
	</div>
</body>
