@model Reagent
<head>
	<link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
	<div class="reagent-grid col-lg-3">
		<img class="img-thumbnail" src="@Model.Img" alt="@Model.Name" />
		<h4>@Model.Name</h4>
		<p>@Model.Desc</p>
		<p>Цена: @Model.Price.ToString("c")</p>
		<p><a class="btn btn-warning" asp-controller="ShopCart" asp-action="AddToShopCart" asp-route-id="@Model.Id">Добавить в корзину</a></p>
	</div>
</body>